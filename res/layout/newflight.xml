<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newflightRelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="143dp"
    android:layout_alignLeft="@+id/btnConfirmAddFlight"
    android:layout_centerVertical="true" >
	
	    <EditText
	        android:id="@+id/editTextlaunchlong"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:hint="Launch Longitude..."
	        android:inputType="numberSigned|numberDecimal" >
	
	        <requestFocus />
	    </EditText>
	
	    <EditText
	        android:id="@+id/editTextlaunchlat"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/editTextlaunchlong"
	        android:hint="Launch Latitude..."
	        android:inputType="numberSigned|numberDecimal" />
	
	</RelativeLayout>